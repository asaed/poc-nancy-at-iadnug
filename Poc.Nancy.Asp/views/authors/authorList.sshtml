@IfNot.HasAuthors
	<div>Sorry, no authors were found</div>
	<br/>
@EndIf

@If.HasAuthors
	<table style="width:100%">
		<tr>
		<th>Id</th>
		<th>Author Name</th> 
		<th>No. of Publications</th>
		</tr>
	
	@Each.Authors
		<tr>
			<td>@Current.Id</td> 
			<td>@Current.Name</td>
			<td>@Current.NumberOfPublications</td>
		</tr>
	@EndEach

	</table>
@EndIf

